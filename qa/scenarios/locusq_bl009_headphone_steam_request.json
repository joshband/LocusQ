{
  "scenario_version": "1.0",
  "id": "locusq_bl009_headphone_steam_request",
  "name": "LocusQ BL-009 Headphone Steam Request",
  "category": "spatial",
  "description": "Same stimulus as downmix reference, but requests Steam binaural mode for BL-009 output-path verification.",

  "capability_requirements": {
    "required_effect_types": ["SPATIAL"],
    "required_behaviors": ["STATEFUL"],
    "excluded_behaviors": [],
    "notes": "Audio output is compared against the downmix reference in the BL-009 contract script."
  },

  "stimulus": {
    "stimulus_id": "multitone",
    "stimulus_variant": "harmonic",
    "parameters": {
      "fundamental_hz": 110.0,
      "num_harmonics": 8,
      "overall_amplitude": 0.32,
      "duration_seconds": 2.0
    }
  },

  "parameter_variations": {
    "pos_azimuth": 0.78,
    "pos_elevation": 0.44,
    "pos_distance": 0.10,
    "emit_gain": 0.50,
    "emit_mute": 0.0,
    "emit_spread": 0.05,
    "emit_directivity": 0.35,
    "emit_dir_azimuth": 0.75,
    "emit_dir_elevation": 0.42,
    "rend_master_gain": 0.50,
    "rend_quality": 1.0,
    "rend_air_absorb": 0.0,
    "rend_doppler": 0.0,
    "rend_room_enable": 0.0,
    "rend_headphone_mode": 1.0
  },

  "analysis_windows": {
    "full": {
      "type": "time_range",
      "start_seconds": 0.10,
      "end_seconds": 2.0,
      "description": "Steam-request render window"
    }
  },

  "expected_invariants": {
    "signal_present": {
      "metric": "rms_energy",
      "window": "full",
      "threshold": {
        "min": -90.0
      },
      "severity": "hard_fail",
      "description": "Steam-request render must produce stable output."
    },
    "no_nan_inf": {
      "metric": "non_finite",
      "window": "full",
      "threshold": {
        "max_count": 0
      },
      "severity": "hard_fail",
      "description": "Render output must remain finite."
    },
    "no_clipping": {
      "metric": "clipping",
      "window": "full",
      "threshold": {
        "peak_dbfs_max": -0.1
      },
      "severity": "hard_fail",
      "description": "Steam-request render must stay below clipping."
    }
  },

  "pass_criteria": "All hard_fail invariants must pass."
}
