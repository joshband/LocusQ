{
  "scenario_version": "1.0",
  "id": "locusq_25_spread_diffuse",
  "name": "LocusQ 2.5 Spread Diffuse Transition",
  "category": "spatial",
  "description": "Phase 2.5 acceptance proxy: high spread should produce a wider, less correlated stereo image.",

  "capability_requirements": {
    "required_effect_types": ["SPATIAL"],
    "required_behaviors": ["STATEFUL"],
    "excluded_behaviors": []
  },

  "stimulus": {
    "stimulus_id": "noise",
    "stimulus_variant": "pink",
    "parameters": {
      "amplitude": 0.45,
      "duration_seconds": 2.5
    }
  },

  "parameter_variations": {
    "pos_azimuth": 0.35,
    "pos_elevation": 0.5,
    "pos_distance": 0.08,
    "emit_gain": 0.5,
    "emit_spread": 1.0,
    "emit_directivity": 0.0,
    "rend_master_gain": 0.5,
    "rend_room_enable": 0.0,
    "rend_doppler": 0.0,
    "rend_air_absorb": 0.0
  },

  "analysis_windows": {
    "full": {
      "type": "time_range",
      "start_seconds": 0.10,
      "end_seconds": 2.5,
      "description": "Diffuse spread output"
    }
  },

  "expected_invariants": {
    "signal_present": {
      "metric": "rms_energy",
      "window": "full",
      "threshold": {
        "min": -80.0
      },
      "severity": "hard_fail"
    },
    "no_nan_inf": {
      "metric": "non_finite",
      "window": "full",
      "threshold": {
        "max_count": 0
      },
      "severity": "hard_fail"
    },
    "width_present": {
      "metric": "spatial_width",
      "window": "full",
      "threshold": {
        "min": 0.0,
        "max": 1.0
      },
      "severity": "soft_warn"
    },
    "decorrelation_present": {
      "metric": "correlation_lr",
      "window": "full",
      "threshold": {
        "min": -1.0,
        "max": 1.0
      },
      "severity": "soft_warn"
    }
  },

  "pass_criteria": "Hard fail invariants must pass."
}
