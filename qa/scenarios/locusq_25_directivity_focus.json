{
  "scenario_version": "1.0",
  "id": "locusq_25_directivity_focus",
  "name": "LocusQ 2.5 Directivity Focus",
  "category": "spatial",
  "description": "Phase 2.5 acceptance proxy: directivity should increase directional contrast toward the aim vector.",

  "capability_requirements": {
    "required_effect_types": ["SPATIAL"],
    "required_behaviors": ["STATEFUL"],
    "excluded_behaviors": []
  },

  "stimulus": {
    "stimulus_id": "noise",
    "stimulus_variant": "white",
    "parameters": {
      "amplitude": 0.45,
      "duration_seconds": 2.5
    }
  },

  "parameter_variations": {
    "pos_azimuth": 0.30,
    "pos_elevation": 0.5,
    "pos_distance": 0.08,
    "emit_gain": 0.5,
    "emit_spread": 0.0,
    "emit_directivity": 1.0,
    "emit_dir_azimuth": 0.30,
    "emit_dir_elevation": 0.5,
    "rend_master_gain": 0.5,
    "rend_room_enable": 0.0,
    "rend_doppler": 0.0,
    "rend_air_absorb": 0.0
  },

  "analysis_windows": {
    "full": {
      "type": "time_range",
      "start_seconds": 0.10,
      "end_seconds": 2.5,
      "description": "Directional render output"
    }
  },

  "expected_invariants": {
    "signal_present": {
      "metric": "rms_energy",
      "window": "full",
      "threshold": {
        "min": -80.0
      },
      "severity": "hard_fail"
    },
    "no_nan_inf": {
      "metric": "non_finite",
      "window": "full",
      "threshold": {
        "max_count": 0
      },
      "severity": "hard_fail"
    },
    "directional_ild": {
      "metric": "ild_max_db",
      "window": "full",
      "threshold": {
        "min": 0.10,
        "max": 60.0
      },
      "severity": "soft_warn",
      "description": "Directional pattern should produce measurable L/R level contrast"
    }
  },

  "pass_criteria": "Hard fail invariants must pass."
}
