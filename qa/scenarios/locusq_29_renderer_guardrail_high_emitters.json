{
  "scenario_version": "1.0",
  "id": "locusq_29_renderer_guardrail_high_emitters",
  "name": "LocusQ Renderer Guardrail CPU (16E+1R Draft)",
  "category": "performance",
  "description": "Renderer guardrail stress check: with 16 emitters active, activity culling + emitter budgeting should keep rendering finite and deadline-safe.",

  "capability_requirements": {
    "required_effect_types": ["SPATIAL"],
    "required_behaviors": ["STATEFUL"],
    "excluded_behaviors": []
  },

  "stimulus": {
    "stimulus_id": "noise",
    "stimulus_variant": "white",
    "parameters": {
      "amplitude": 0.30,
      "duration_seconds": 3.0
    }
  },

  "parameter_variations": {
    "qa_emitter_instances": 1.0,
    "pos_azimuth": 0.50,
    "pos_elevation": 0.50,
    "pos_distance": 0.10,
    "emit_gain": 0.50,
    "emit_spread": 0.45,
    "emit_directivity": 0.60,
    "rend_master_gain": 0.50,
    "rend_quality": 0.0,
    "rend_room_enable": 1.0,
    "rend_room_mix": 0.35,
    "rend_room_size": 0.48,
    "rend_room_damping": 0.40,
    "rend_room_er_only": 0.0,
    "rend_doppler": 1.0,
    "rend_doppler_scale": 0.75,
    "rend_air_absorb": 1.0,
    "phys_enable": 1.0,
    "phys_drag": 0.15,
    "phys_gravity": 0.50,
    "phys_vel_x": 0.80,
    "phys_vel_y": 0.50,
    "phys_vel_z": 0.50,
    "phys_throw": 1.0,
    "anim_enable": 1.0,
    "anim_mode": 1.0,
    "anim_loop": 1.0,
    "anim_speed": 0.1919,
    "anim_sync": 1.0
  },

  "analysis_windows": {
    "full": {
      "type": "time_range",
      "start_seconds": 0.10,
      "end_seconds": 3.0,
      "description": "High-emitter guardrail validation window"
    }
  },

  "expected_invariants": {
    "no_nan_inf": {
      "metric": "non_finite",
      "window": "full",
      "threshold": {
        "max_count": 0
      },
      "severity": "hard_fail"
    },
    "signal_present": {
      "metric": "rms_energy",
      "window": "full",
      "threshold": {
        "min": -90.0
      },
      "severity": "hard_fail"
    },
    "deadline": {
      "metric": "perf_meets_deadline",
      "threshold": {
        "equals": true
      },
      "severity": "hard_fail",
      "description": "High-emitter guardrail path must remain deadline-safe."
    },
    "avg_block_time": {
      "metric": "perf_avg_block_time_ms",
      "threshold": {
        "max": 3.0
      },
      "severity": "hard_fail"
    },
    "p95_block_time": {
      "metric": "perf_p95_block_time_ms",
      "threshold": {
        "max": 5.0
      },
      "severity": "soft_warn"
    },
    "allocation_free": {
      "metric": "perf_allocation_free",
      "threshold": {
        "equals": true
      },
      "severity": "soft_warn"
    }
  },

  "pass_criteria": "All hard_fail invariants must pass."
}
