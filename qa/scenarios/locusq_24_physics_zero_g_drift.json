{
  "scenario_version": "1.0",
  "id": "locusq_24_physics_zero_g_drift",
  "name": "LocusQ 2.4 Physics Zero-G Drift",
  "category": "spatial",
  "description": "Phase 2.4 acceptance proxy: in zero-g mode (gravity=0, drag=0), throw-induced motion should persist without discontinuities or non-finite values.",

  "capability_requirements": {
    "required_effect_types": ["SPATIAL"],
    "required_behaviors": ["STATEFUL"],
    "excluded_behaviors": []
  },

  "stimulus": {
    "stimulus_id": "sweep",
    "stimulus_variant": "linear_sine",
    "parameters": {
      "start_hz": 392.0,
      "end_hz": 392.0,
      "amplitude": 0.32,
      "duration_seconds": 4.0
    }
  },

  "parameter_variations": {
    "pos_azimuth": 0.50,
    "pos_elevation": 0.50,
    "pos_distance": 0.15,
    "emit_gain": 0.5,
    "emit_spread": 0.0,
    "emit_directivity": 0.0,
    "phys_enable": 1.0,
    "phys_vel_x": 0.66,
    "phys_vel_y": 0.53,
    "phys_vel_z": 0.58,
    "phys_drag": 0.0,
    "phys_gravity": 0.0,
    "phys_throw": 1.0,
    "rend_master_gain": 0.5,
    "rend_room_enable": 0.0,
    "rend_doppler": 0.0,
    "rend_air_absorb": 0.0
  },

  "analysis_windows": {
    "drift_window": {
      "type": "time_range",
      "start_seconds": 0.25,
      "end_seconds": 4.0,
      "description": "Zero-g post-throw drift window"
    }
  },

  "expected_invariants": {
    "signal_present": {
      "metric": "rms_energy",
      "window": "drift_window",
      "threshold": {
        "min": -85.0
      },
      "severity": "hard_fail"
    },
    "no_nan_inf": {
      "metric": "non_finite",
      "window": "drift_window",
      "threshold": {
        "max_count": 0
      },
      "severity": "hard_fail"
    },
    "no_clicks_from_zero_g_motion": {
      "metric": "discontinuity_count",
      "window": "drift_window",
      "threshold": {
        "max_count": 10,
        "detection_threshold_db": 9.0
      },
      "severity": "hard_fail"
    },
    "motion_persists_without_drag_or_gravity": {
      "metric": "flux_rate",
      "window": "drift_window",
      "threshold": {
        "min": 0.00001,
        "max": 10.0
      },
      "severity": "hard_fail"
    }
  },

  "pass_criteria": "All hard_fail invariants must pass."
}
