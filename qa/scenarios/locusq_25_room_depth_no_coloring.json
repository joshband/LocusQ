{
  "scenario_version": "1.0",
  "id": "locusq_25_room_depth_no_coloring",
  "name": "LocusQ 2.5 Room Depth Without Tonal Drift",
  "category": "spatial",
  "description": "Phase 2.5 acceptance proxy: room chain should add depth while keeping tonal balance stable.",

  "capability_requirements": {
    "required_effect_types": ["SPATIAL"],
    "required_behaviors": ["STATEFUL"],
    "excluded_behaviors": [],
    "notes": "Uses LocusQSpatialAdapter with room acoustics enabled"
  },

  "stimulus": {
    "stimulus_id": "noise",
    "stimulus_variant": "pink",
    "parameters": {
      "amplitude": 0.45,
      "duration_seconds": 3.0
    }
  },

  "parameter_variations": {
    "pos_azimuth": 0.5,
    "pos_elevation": 0.5,
    "pos_distance": 0.08,
    "emit_gain": 0.5,
    "emit_mute": 0.0,
    "rend_master_gain": 0.5,
    "rend_distance_model": 0.0,
    "rend_air_absorb": 0.0,
    "rend_room_enable": 1.0,
    "rend_room_mix": 0.45,
    "rend_room_size": 0.25,
    "rend_room_damping": 0.45,
    "rend_room_er_only": 0.0,
    "rend_quality": 0.0
  },

  "analysis_windows": {
    "full": {
      "type": "time_range",
      "start_seconds": 0.15,
      "end_seconds": 3.0,
      "description": "Steady-state room output"
    }
  },

  "expected_invariants": {
    "signal_present": {
      "metric": "rms_energy",
      "window": "full",
      "threshold": {
        "min": -80.0
      },
      "severity": "hard_fail",
      "description": "Room chain must produce audible output"
    },
    "no_nan_inf": {
      "metric": "non_finite",
      "window": "full",
      "threshold": {
        "max_count": 0
      },
      "severity": "hard_fail",
      "description": "No NaN/Inf with room processing enabled"
    },
    "no_clipping": {
      "metric": "clipping",
      "window": "full",
      "threshold": {
        "max": -0.1
      },
      "severity": "hard_fail",
      "description": "Room processing should not clip under nominal input"
    },
    "room_depth_present": {
      "metric": "rt60",
      "window": "full",
      "threshold": {
        "min": 0.05,
        "max": 6.0
      },
      "severity": "soft_warn",
      "description": "Room chain should produce measurable decay"
    },
    "tonal_centroid_guard": {
      "metric": "spectral_centroid",
      "window": "full",
      "threshold": {
        "min": 150.0,
        "max": 9000.0
      },
      "severity": "soft_warn",
      "description": "Tonal center should remain in a plausible range"
    },
    "tonal_flatness_guard": {
      "metric": "spectral_flatness",
      "window": "full",
      "threshold": {
        "min": 0.01,
        "max": 0.99
      },
      "severity": "soft_warn",
      "description": "Avoid pathological tonal over-coloration"
    }
  },

  "pass_criteria": "All hard_fail invariants must pass.",
  "use_cases": [
    "Phase 2.5 acceptance: room depth criterion",
    "Regression guard for room-chain tonal stability"
  ]
}
